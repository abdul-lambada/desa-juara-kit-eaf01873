{
  "name": "desa-juara/backend",
  "description": "Backend MVC untuk pengelolaan data Desa Juara",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "vlucas/phpdotenv": "^5.6"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "post-create-project-cmd": [
      "@php -r \"if (!file_exists('bootstrap/cache')) { mkdir('bootstrap/cache', 0777, true); }\""
    ],
    "post-autoload-dump": [
      "@php -r \"if (!file_exists('bootstrap/cache')) { mkdir('bootstrap/cache', 0777, true); }\""
    ]
  }
}
